{
  "include": ["src/**/*"],
  "compilerOptions": {
    "outDir": "ts-out",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "lib": ["ES2023"],
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "typings",
    "target": "esnext",
    "importHelpers": false,
    "skipLibCheck": true
  }
}
